<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/candidate_suggestions_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">

    <com.taccotap.phahtaigi.utils.BaselineFixedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/fontfamily_genyomin_m"
        android:text="PhahTaigi 台語輸入法"
        android:textColor="@color/top_menu_appname_text"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <Button
        android:id="@+id/openSettingButton"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_setting_custom_color"
        android:text="Siat"
        android:textAllCaps="false"
        android:textColor="#feee"
        android:textSize="15sp" />

    <Button
        android:id="@+id/openAboutButton"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_setting_custom_color"
        android:text="？"
        android:textColor="#feee"
        android:textSize="15sp" />
</LinearLayout>
