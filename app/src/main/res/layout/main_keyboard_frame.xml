<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0fff"
        android:gravity="right"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/keyboardSettingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/keyboard_background_lxx_dark"
            android:gravity="left"
            android:orientation="horizontal"
            android:visibility="gone">

            <RadioGroup
                android:id="@+id/lomajiSelectionRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:checkedButton="@+id/tailoRadioButton"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/tailoRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#fccc"
                    android:text="Tâi-lô 臺羅"
                    android:textColor="#fccc"
                    android:textSize="16sp"/>

                <RadioButton
                    android:id="@+id/pojRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:buttonTint="#fccc"
                    android:text="Pe̍h-ōe-jī 白話字"
                    android:textColor="#fccc"
                    android:textSize="16sp"/>
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <com.taccotap.phahtaigi.ime.keyboard.TaigiKeyboardView
        android:id="@+id/taigi_keyboard"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/keyboard_background_lxx_dark"
        android:keyBackground="@drawable/btn_keyboard_key_lxx_dark"
        android:keyPreviewLayout="@layout/preview"
        android:keyTextColor="#fccc"
        android:popupLayout="@layout/key_popup_layout"
        />
</LinearLayout>
